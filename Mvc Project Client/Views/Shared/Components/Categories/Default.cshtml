@model Mvc_Project_Client.ViewModels.CategoriesViewModel

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">

                    @foreach (var value in Model.Categories)
                    {
                        <li class="nav-item">
                            <div class="dropdown">
                                <button class="btn btn-default dropdown-toggle" id="@value.Key.Id" type="button" data-toggle="dropdown" data-hover="dropdown">
                                    @value.Key.Name <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    @foreach (var subCategory in value.Value)
                                    {
                                        <li id="@subCategory.Id">
                                            <a asp-action="Index">@subCategory.Name</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>